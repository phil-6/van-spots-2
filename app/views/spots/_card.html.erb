<div class="card spot-card <%= spot.spot_type %> rating-<%= spot.average_rating.floor %>">
  <div class="card-header text-center" >
    <% if user_signed_in? %>
      <a href="/spots/<%= spot.id %>">
    <% end %>

    <h2 class="card-title"><%= spot.name %></h2>
    <h5><%= spot.spot_type.humanize %> - <%= spot.average_rating %>/10</h5>

    <% if user_signed_in? %>
      </a>
    <% end %>
  </div>

  <div class="card-body">
    <h6>Created By: <% if user_signed_in? %><a href="/users/<%= spot.user.id %>"> <% end %><%= spot.user.username %><% if user_signed_in? %></a><% end %> on <%= spot.created_at.strftime('%b %d, %Y') %></h6>
    <%= spot.description %>
  </div>

  <div class="more-info">
    <div class="card-footer text-center">
      <% if user_signed_in? %>
        <%= link_to "More Info", spot_path(spot) %>
      <% else %>
        <%= link_to new_user_session_path, :class => 'nav-link' do%>
          Login for More Info
        <% end %>
      <% end %>
    </div>
  </div>

</div>
